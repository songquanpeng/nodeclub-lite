<%- include('./partials/header') %>
<div class="columns is-desktop">
    <div class="column">
        <div class="page-card-list">
            <% if (pages.length){ %>
                <% pages.forEach((page)=>{ %>
                    <div class="box">
                        <article class="media">
                            <div class="media-content">
                                <div class="content">
                                    <div class="page-card-title"><a
                                                href="/page/<%= page.link %>"><%= page.title ? page.title : 'No title' %></a>
                                    </div>
                                    <% page.tag.trim().split(" ").forEach(function (tag) { if(tag !== ""){ %>
                                        <a class="tag is-light" href='/tag/<%= tag %>'><%= tag %></a>
                                    <% }}); %>
                                    <a class="tag is-light"
                                       href="/archive/<%= page.post_time.split('-')[0] + '/' + page.post_time.split('-')[1] %>"><%= page.post_time.substring(0, 10) %></a>
                                    <span class="tag is-light"><%- page.view %> views</span>
                                    <div class="page-card-text">
                                        <%= page.description ? page.description : "No description" %>
                                    </div>
                                </div>
                            </div>
                        </article>
                    </div>
            <% })} %>
        </div>
    </div>
    <div class="column is-one-quarter-fullhd">
        <div class="card">

        </div>
        <div class="card" style="margin-top: 32px">
            <header class="card-header">
                <p class="card-header-title">
                    About
                </p>
            </header>
            <div class="card-content">
                <div class="content">

                </div>
            </div>
        </div>
    </div>
</div>


<%- include('./partials/footer') %>
